<div class="post-preview">
    <h2 class="post-title"><%= link_to blog.title, blog %></h2>
    
    <p class="body"><%= blog.body %></p>

    
    <% if logged_in?(:site_admin) %>
    <p class="post-meta">
    
		<%= link_to blog.status, toggle_status_blog_path(blog) %> /
    	<%= link_to 'Edit', edit_blog_path(blog) %> / 
    	<%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Like ...for realz?' } %>
    </p>
    <% end %>
	<p class="post-meta"><%= distance_of_time_in_words(blog.created_at, Time.now) %></p>
</div>